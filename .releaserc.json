{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ],
    [
      "semantic-release-discord-notifier",
      {
        "embedJson": {
          "username": "rieversed",
          "avatar_url": "https://cdn.modrinth.com/data/KmtdQm2A/193aebde3cdc47ba09fa421a61f8dd5e51e83714_96.webp",
          "content": "# :rocket: ${nextRelease.version} just dropped",
          "embeds": [
            {
              "title": "What changed?",
              "description": "${nextRelease.notes}",
              "color": 7377919,
              "footer": {
                "text": "Curseforge might take a few hours to approve the file so if you want to download it immediately, use the Modrinth link."
              }
            }
          ],
          "components": [
            {
              "type": 1,
              "components": [
                {
                  "type": 2,
                  "style": 5,
                  "label": "Download from Modrinth",
                  "url": "https://modrinth.com/mod/nopause"
                },
                {
                  "type": 2,
                  "style": 5,
                  "label": "Download from Curseforge",
                  "url": "https://www.curseforge.com/minecraft/mc-mods/nopause"
                }
              ]
            }
          ]
        }
      }
    ]
  ]
}
